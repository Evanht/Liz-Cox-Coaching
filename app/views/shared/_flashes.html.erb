<% if notice %>

  <div class="alert alert-info alert-dismissible" role="alert">
  <br><br><br><br><br>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Dismiss Alert</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>

  <div class="alert alert-warning alert-dismissible" role="alert">
  <br><br><br><br><br>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Dismiss Alert</span></button>
    <%= alert %>
  </div>
<% end %>
